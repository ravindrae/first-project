<!-- bydy of the webpage-->
<body>
  <% if !user_signed_in? %>
    <div class="jumbotron first_jumbo">
      <h2>Articles</h2>
      <%= link_to "New Article",new_article_path,class:"btn btn-primary btn-lg btn-info sbtn"%>
    </div>

    <%@articles.each do |article| %>
      <div class="jumbotron sjb">
        <h3><%=article.title.capitalize%></h3>
        <h6><i>Written by:</i></h6>
        <h5><%=User.find(article.user_id).first_name.capitalize+" "+User.find(article.user_id).last_name.capitalize%></h5>
        <h6><i>Date:<%=article.created_at%></i></h6>
        <%= link_to "Show",article_path(article),class:"btn cbtn btn-lg btn-block"%>
      </div>
    <% end %>
  <%else%>
      <div class="jumbotron first_jumbo">
        <h2>Articles</h2>
        <%= link_to "New Article",new_article_path,class:"btn btn-primary btn-lg btn-info sbtn"%>
        <%= link_to "My articles",user_path(current_user.id),class:"btn btn-primary btn-lg btn-info sbtn"%>
      </div>
      <%@articles.each do |article| %>
          <div class="jumbotron sjb">
                <h3><%=article.title.capitalize%></h3>
                <h6><i>Written by:</i></h6>
                <h5><%=User.find(article.user_id).first_name.capitalize+" "+User.find(article.user_id).last_name.capitalize%></h5>
                <h6><i>Date:<%=article.created_at%></i></h6>
                <%= link_to "Show",article_path(article),class:"btn cbtn btn-lg btn-block"%>
          </div>
      <% end %>
  <%end%>
</body>
