
<%= form_for([@article,@article.comments.build]) do |f| %>
  <div class="form-group">
    <span class="col-sm-2 gpc" style="width:30px"><i class="glyphicon glyphicon-user"></i></span>
    <div class="col-sm-10">
        <%= f.text_area :content,class:"form-control" ,placeholder:"Enter the comment...!"%>
        <%= f.submit :"Response",class:"control-label col-sm-2 btn-primary" %>
    </div>
  </div>
<br/>
<%end%>
